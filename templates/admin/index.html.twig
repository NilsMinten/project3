{% extends 'base.html.twig' %}

{% block title %}Admin | Dashboard{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h2>Upcomming Tournaments</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Visitors</th>
                        <th>Start Time</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tournament in upcomingTournaments %}
                        <tr>
                            <td>{{ tournament.name }}</td>
                            <td>{{ tournament.visitors|length }}</td>
                            <td>{{ tournament.startTime|date }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h2>Upcomming Masterclasses</h2>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Visitors</th>
                    <th>Start Time</th>
                </tr>
                </thead>
                <tbody>
                {% for masterclass in upcomingMasterclasses %}
                    <tr>
                        <td>{{ masterclass.name }}</td>
                        <td>{{ masterclass.visitors|length }}</td>
                        <td>{{ masterclass.startTime|date }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
