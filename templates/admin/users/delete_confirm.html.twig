{% extends 'base.html.twig' %}

{% block title %}Admin | User delete{% endblock %}

{% block body %}
    <h2>Are you sure you want to delete the following user?</h2>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID:</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username:</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>First name:</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last name:</th>
                <td>{{ user.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <div class="button-group">
        <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="btn btn-default">Cancel</a>
        <a href="{{ path('admin_user_delete', {'id': user.id }) }}" class="btn btn-danger">Delete</a>
    </div>

{% endblock %}
