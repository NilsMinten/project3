{% extends 'base.html.twig' %}

{% block title %}Admin | User edit{% endblock %}

{% block body %}
    <h2>User Edit</h2>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.username) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.role) }}


        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}

{% endblock %}
