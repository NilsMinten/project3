{% extends 'base.html.twig' %}

{% block title %}Admin | Tournament delete{% endblock %}

{% block body %}
    <h2>Are you sure you want to delete the following Tournament?</h2>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID:</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Name:</th>
                <td>{{ tournament.name }}</td>
            </tr>
            <tr>
                <th>Gametype:</th>
                <td>{{ tournament.gametype }}</td>
            </tr>
        </tbody>
    </table>

    <div class="button-group">
        <a href="{{ path('admin_tournament_details', { 'id': tournament.id }) }}" class="btn btn-default">Cancel</a>
        <a href="{{ path('admin_tournament_delete', {'id': tournament.id }) }}" class="btn btn-danger">Delete</a>
    </div>

{% endblock %}
