{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
    <h2>My account</h2>

    <div class="row">
        <div class="col-lg-8">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>ID:</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username:</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>First name:</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Last name:</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Game</th>
                    <th>Score</th>
                </tr>
                </thead>
                <tbody>
                {% for rating in user.rating %}
                    <tr>
                        <td>{{ rating.gameType }}</td>
                        <td>{{ rating.rating }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
